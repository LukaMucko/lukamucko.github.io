---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <main>
    <header>
      <h1>Luka <span>Mucko</span></h1>
      <p id="status-line" class="status">Zagreb · --:--</p>
      <p class="about">working on crystals and grass</p>
      <h2>Super slick professinal homepage coming soon</h2>
    </header>
    <section class="content">
      <div class="button-group">
        <a href="/blog" class="btn blog-btn">Blog</a>
        <button class="btn main-btn" type="button">Email Me</button>
      </div>
    </section>
    <div
      id="email-modal"
      class="email-modal hidden"
      role="dialog"
      aria-modal="true"
      aria-label="Email"
    >
      <button class="modal-close" type="button" aria-label="Close">
        ×
      </button>
      <p id="email-value" class="email-value"></p>
      <button class="btn copy-btn" type="button">Copy</button>
    </div>
  </main>
</Layout>
<style>
  main {
    padding: 4rem;
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    min-height: 100vh;
    box-sizing: border-box;
  }
  header h1 {
    font-family: "Courier";
    font-size: 2.5rem;
    font-weight: normal;
    margin: 0 0 1.5rem;
  }
  header h1 span {
    color: var(--text-color);
  }
  header h2 {
    font-family: "Courier";
    font-size: 1.8rem;
    font-weight: normal;
    margin: 2rem 0;
  }
  .content {
    max-width: 800px;
    line-height: 1.4;
    font-size: 1rem;
  }
  .content p {
    margin: 0.5rem 0;
  }
  .about {
    font-family: "Courier New", Courier, monospace;
    font-size: 1rem;
    margin: 0 0 1.5rem;
    opacity: 0.9;
  }
  .button-group .btn {
    width: 200px;
    text-align: center;
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .button-group {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }
  .main-btn {
    font-weight: bold;
    padding: 0.8rem 2rem;
    font-size: 1.5rem;
  }
  .email-modal {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: var(--bg-color);
    border: 5px solid var(--text-color);
    padding: 2.5rem 3rem;
    box-shadow: 20px 20px 0px var(--shadow-color);
    text-align: center;
    z-index: 1000;
    min-width: 360px;
    max-width: 90vw;
  }
  .modal-close {
    position: absolute;
    top: 0.5rem;
    right: 0.7rem;
    background: transparent;
    border: none;
    color: var(--text-color);
    font-size: 1.6rem;
    line-height: 1;
    cursor: pointer;
    padding: 0;
    transition: color 0.1s;
  }
  .modal-close:hover {
    color: var(--accent-color);
  }
  .status {
    font-family: "Courier New", Courier, monospace;
    font-size: 1rem;
    margin: 0 0 0.3rem;
    opacity: 0.85;
  }
  .status::before {
    content: "•";
    color: var(--accent-color);
    margin-right: 0.4rem;
  }
  .email-value {
    font-family: "Courier New", Courier, monospace;
    font-size: 1.2rem;
    margin: 0;
    word-break: break-all;
  }
  .copy-btn {
    font-size: 1rem;
    padding: 0.5rem 1.2rem;
    margin-top: 1.2rem;
  }
  .hidden {
    display: none !important;
  }
  @media (max-width: 768px) {
    main {
      padding: 2rem;
    }
    header h1 {
      font-size: 1.8rem;
    }
    header h2 {
      font-size: 1.4rem;
    }
    .email-modal {
      width: 85%;
      padding: 2rem;
    }
    .email-value {
      font-size: 1rem;
    }
    .status {
      font-size: 0.9rem;
    }
  }
</style>

<script>
  const btn = document.querySelector(".main-btn") as HTMLButtonElement | null;
  const modal = document.getElementById("email-modal");
  const emailValue = document.getElementById("email-value");
  const copyBtn = document.querySelector(".copy-btn") as HTMLButtonElement | null;
  const statusLine = document.getElementById("status-line");
  const closeBtn = document.querySelector(".modal-close") as HTMLButtonElement | null;
  const encodedEmail = "BxASCksUHgYSBCUeBgQQB0saBAg=";
  const key = "key";

  const decodeEmail = (encoded: string, secret: string) => {
    const bytes = Uint8Array.from(atob(encoded), (c) => c.charCodeAt(0));
    let result = "";
    for (let i = 0; i < bytes.length; i++) {
      result += String.fromCharCode(
        bytes[i] ^ secret.charCodeAt(i % secret.length),
      );
    }
    return result;
  };

  if (btn) {
    btn.addEventListener("click", (e) => {
      e.stopPropagation();
      const decoded = decodeEmail(encodedEmail, key);
      if (emailValue) emailValue.textContent = decoded;
      if (copyBtn) copyBtn.textContent = "Copy";
      if (modal) modal.classList.remove("hidden");
    });
  }

  const closeModal = () => {
    if (modal && !modal.classList.contains("hidden")) {
      modal.classList.add("hidden");
    }
  };

  const copyToClipboard = async (text: string) => {
    if (navigator.clipboard && navigator.clipboard.writeText) {
      await navigator.clipboard.writeText(text);
      return;
    }
    const temp = document.createElement("textarea");
    temp.value = text;
    temp.setAttribute("readonly", "true");
    temp.style.position = "absolute";
    temp.style.left = "-9999px";
    document.body.appendChild(temp);
    temp.select();
    document.execCommand("copy");
    document.body.removeChild(temp);
  };

  if (copyBtn) {
    copyBtn.addEventListener("click", async (e) => {
      e.stopPropagation();
      const decoded = decodeEmail(encodedEmail, key);
      await copyToClipboard(decoded);
      copyBtn.textContent = "Copied";
      setTimeout(() => {
        copyBtn.textContent = "Copy";
      }, 1200);
    });
  }

  document.addEventListener("keydown", (e) => {
    if (e.key === "Escape" && modal && !modal.classList.contains("hidden")) {
      closeModal();
    }
  });

  if (closeBtn) {
    closeBtn.addEventListener("click", (e) => {
      e.stopPropagation();
      closeModal();
    });
  }

  const formatTime = () => {
    const now = new Date();
    return new Intl.DateTimeFormat("en-GB", {
      timeZone: "Europe/Zagreb",
      hour: "2-digit",
      minute: "2-digit",
      hour12: false,
    }).format(now);
  };

  const updateStatus = () => {
    if (!statusLine) return;
    statusLine.textContent = `Zagreb · ${formatTime()}`;
  };

  updateStatus();
  setInterval(updateStatus, 30000);
</script>
