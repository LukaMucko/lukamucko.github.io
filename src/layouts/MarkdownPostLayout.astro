---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
const title = frontmatter.title || "Blog";
const description = frontmatter.description || "";
const canonical = Astro.site ? new URL(Astro.url.pathname, Astro.site) : null;
const formatDate = (value) => {
    if (!value) return "";
    const date = value instanceof Date ? value : new Date(value);
    if (Number.isNaN(date.valueOf())) return "";
    return date.toLocaleDateString("en-US", {
        year: "numeric",
        month: "short",
        day: "2-digit",
    });
};
---

<Layout>
    <head>
        <title>{title}</title>
        {description && <meta name="description" content={description} />}
        {canonical && <link rel="canonical" href={canonical.toString()} />}
        <meta property="og:type" content="article" />
        <meta property="og:title" content={title} />
        {description && <meta property="og:description" content={description} />}
        {canonical && <meta property="og:url" content={canonical.toString()} />}
        <meta name="twitter:card" content="summary" />
        <meta name="twitter:title" content={title} />
        {description && (
            <meta name="twitter:description" content={description} />
        )}
    </head>
    <main class="page-main">
        <header class="page-header">
            <a href="/blog" class="btn back-btn">‚Üê Back</a>
            <h1>{frontmatter.title}</h1>
            <div class="meta">
                {
                    frontmatter.pubDate && (
                        <time>{formatDate(frontmatter.pubDate)}</time>
                    )
                }
            </div>
        </header>
        <article class="content">
            <slot />
        </article>
    </main>
</Layout>

<style>
    .page-header {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 1.5rem;
        margin-bottom: 3rem;
        border-bottom: 2px solid var(--accent-color);
        padding-bottom: 1rem;
    }
    .page-header h1 {
        font-family: "Courier";
        font-size: 2.5rem;
        font-weight: normal;
        margin: 0;
    }
    .meta {
        display: flex;
        align-items: center;
        font-family: "Courier New", Courier, monospace;
        font-size: 0.9rem;
    }
    .back-btn {
        width: fit-content;
    }
    .content {
        font-family: "Courier New", Courier, monospace;
        font-size: 1.1rem;
        line-height: 1.6;
    }
    /* Brutalist typography for markdown content */
    .content :global(h1),
    .content :global(h2),
    .content :global(h3) {
        font-family: "Courier";
        font-weight: normal;
        margin-top: 2rem;
        margin-bottom: 1rem;
    }
    .content :global(p) {
        margin-bottom: 1.5rem;
    }
    .content :global(a) {
        color: var(--text-color);
        text-decoration: none;
        border-bottom: 2px solid var(--accent-color);
    }
    .content :global(code) {
        background: #141a13;
        color: var(--text-color);
        padding: 0.1rem 0.25rem;
        font-size: 0.9rem;
        border-radius: 2px;
    }
    .content :global(pre) :global(code) {
        padding: 0;
        background: transparent;
    }
    .content :global(pre) {
        background: var(--code-bg);
        color: var(--text-color);
        padding: 1rem 1.2rem;
        overflow-x: auto;
        border: 1px solid var(--code-border);
        box-shadow: 6px 6px 0px var(--code-shadow);
    }
    .content :global(.nb-output-frame) {
        width: 100%;
        min-height: 120px;
        border: 1px solid var(--text-color);
        box-shadow: none;
        background: transparent;
        display: block;
        margin: 0.75rem 0;
    }
    .content :global(.nb-output-text) {
        border: 1px solid var(--text-color);
        padding: 1rem;
        background: transparent;
        margin: 0.75rem 0;
        overflow-x: auto;
        white-space: pre-wrap;
    }
    .content :global(.nb-output-image) {
        display: block;
        max-width: 100%;
        margin: 0.75rem 0;
    }
</style>

<script>
    const handleMessage = (event) => {
        if (event.origin !== window.location.origin) return;
        const data = event.data;
        if (!data || data.type !== "nb-iframe-height") return;
        const frame = document.getElementById(data.id);
        if (frame && frame.tagName === "IFRAME" && data.height) {
            frame.style.height = `${data.height}px`;
        }
    };

    window.addEventListener("message", handleMessage);
</script>
