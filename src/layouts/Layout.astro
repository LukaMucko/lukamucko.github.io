<style is:global>
	:root {
		--bg-color: #ffffff;
		--text-color: #000000;
		--shadow-color: #000000;

		--astro-code-color-text: var(--text-color);
		--astro-code-color-background: transparent;
		--astro-code-token-constant: var(--text-color);
		--astro-code-token-string: var(--text-color);
		--astro-code-token-comment: var(--text-color);
		--astro-code-token-keyword: var(--text-color);
		--astro-code-token-parameter: var(--text-color);
		--astro-code-token-function: var(--text-color);
		--astro-code-token-string-expression: var(--text-color);
		--astro-code-token-punctuation: var(--text-color);
		--astro-code-token-link: var(--text-color);
	}

	html.dark {
		--bg-color: #000000;
		--text-color: #ffffff;
		--shadow-color: #ffffff;
	}

	html {
		height: 100%;
		width: 100%;
	}

	body {
		background-color: var(--bg-color);
		color: var(--text-color);
		font-family: "Courier New", Courier, monospace;
		transition:
			background-color 0.3s,
			color 0.3s;
		margin: 0;
		padding: 0;
		min-height: 100%;
		width: 100%;
	}

	/* Global Code Styles */
	:global(code),
	:global(pre) {
		font-family: "Fira Code", monospace !important;
	}
	:global(pre) {
		padding: 1rem;
		border: 1px solid var(--text-color);
		box-shadow: none;
		background-color: transparent !important;
		overflow-x: auto;
	}
	:global(code) {
		background-color: transparent !important;
		color: var(--text-color) !important;
	}
	:global(.astro-code span) {
		color: var(--text-color) !important;
		background-color: transparent !important;
	}

	#theme-toggle {
		position: fixed;
		top: 2rem;
		left: 2rem;
		background: var(--bg-color);
		border: 2px solid var(--text-color);
		color: var(--text-color);
		width: 3rem;
		height: 3rem;
		display: flex;
		align-items: center;
		justify-content: center;
		cursor: pointer;
		box-shadow: 4px 4px 0px var(--shadow-color);
		z-index: 1000;
		transition:
			transform 0.1s,
			box-shadow 0.1s;
	}

	#theme-toggle:active {
		transform: translate(2px, 2px);
		box-shadow: 2px 2px 0px var(--shadow-color);
	}

	#theme-toggle svg {
		pointer-events: none;
	}

	a:focus-visible,
	button:focus-visible {
		outline: 2px dashed var(--text-color);
		outline-offset: 4px;
	}
</style>

<script is:inline>
	function initThemeToggle() {
		const themeToggle = document.getElementById("theme-toggle");
		if (themeToggle) {
			// Remove previous listener to be safe
			const newToggle = themeToggle.cloneNode(true);
			themeToggle.parentNode.replaceChild(newToggle, themeToggle);

			newToggle.addEventListener("click", () => {
				document.documentElement.classList.toggle("dark");
				const isDark =
					document.documentElement.classList.contains("dark");
				localStorage.setItem("theme", isDark ? "dark" : "light");
			});
		}
	}

	if (document.readyState === "loading") {
		document.addEventListener("DOMContentLoaded", initThemeToggle);
	} else {
		initThemeToggle();
	}

	document.addEventListener("astro:page-load", initThemeToggle);
</script>
